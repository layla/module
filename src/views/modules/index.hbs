<div class="page-header">
  <h1>Modules</h1>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr class="active">
        <th>Name</th>
        <th>Details</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each module in model}}
      <tr>
        <td><h4><b>{{ module.vendor }}/{{ module.name }}</b></h4></td>
        <td>
          <small>
            <dl class="dl-horizontal">
              <dt>Plural Name</dt>
              <dd>{{ module.plural_name }}</dd>
            </dl>
          </small>
        </td>
        <td style="text-align: right">
          <a href="#modules.edit/module.id" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i> Edit</a>
          <a href="#modules.destroy/module.id" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
